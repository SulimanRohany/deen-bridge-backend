# Django Settings
# SECURITY WARNING: Generate a new secret key for production using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-generate-new-one-for-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# Django Settings Module
# Use 'backend.settings.development' for development
# Use 'backend.settings.production' for production
DJANGO_SETTINGS_MODULE=backend.settings.production

# Database Configuration
# PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/deenbridge

# SQLite (For development only)
# DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration
# Used for caching and channel layers (WebSocket support)
REDIS_URL=redis://127.0.0.1:6379/0

# CORS Configuration
# Add your frontend domain(s) here
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Backend URL
# Used for generating links in emails and notifications
BACKEND_URL=https://api.yourdomain.com

# Frontend URL
# Used for generating password reset links and redirects
FRONTEND_URL=https://yourdomain.com

# Email Configuration (Brevo SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-brevo-email@example.com
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=Deen Bridge <your-brevo-email@example.com>
SERVER_EMAIL=your-brevo-email@example.com

# Admin Configuration
ADMIN_NAME=Admin Name
ADMIN_EMAIL=admin@yourdomain.com

# Security Settings
# Set to True if you're using HTTPS (recommended for production)
SECURE_SSL_REDIRECT=True

# AWS S3 Configuration (Optional - for static/media file storage)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Sentry Error Tracking (Optional but recommended for production)
# Sign up at https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Production Server Configuration
# Number of Gunicorn workers (2-4 x CPU cores)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=300

# Application Settings
# Maximum upload size for media files (in MB)
MAX_UPLOAD_SIZE=100

# Rate Limiting
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_USER=1000/hour

